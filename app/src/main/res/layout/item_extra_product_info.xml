<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
    >

    <LinearLayout
       style="@style/ll_common_m_w_h"
       android:gravity="center_vertical"
       android:layout_marginTop="18dp"
        >

        <TextView
            android:id="@+id/txt_star"
            style="@style/my_left_txt"
            android:text="@string/star"
            android:textColor="@color/textColor_red"/>
        <!--edit不自动获取焦点-->
        <TextView
            android:id="@+id/txt_left"
            style="@style/my_left_txt_1"
            android:text="@string/user_name"/>

        <EditText
            android:id="@+id/txt_right1"
            style="@style/text_black_14_m_"
            android:layout_height="match_parent"
            android:background="@null"
            android:maxLength="40"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/layout_choose"
            style="@style/common_ll_0_m_h">

            <TextView
                android:id="@+id/txt_right2"
                style="@style/text_black_14_m_"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:maxLength="40"/>

            <ImageView
                android:id="@+id/img_down"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_down"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>