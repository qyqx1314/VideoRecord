<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/activity_head_new"/>
    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <!--客户姓名-->
    <LinearLayout
        style="@style/apply_ll"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <TextView
            style="@style/my_left_txt1"
            android:layout_marginLeft="12dp"
            android:text="@string/user_name" />

        <EditText
            android:id="@+id/user_name"
            style="@style/text_black_14_m_"
            android:background="@null"
            android:hint="@string/common_hint" />
    </LinearLayout>

    <View style="@style/line_vertical" />
    <!--证件号-->
    <LinearLayout
        style="@style/apply_ll"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            style="@style/my_left_txt1"
            android:layout_marginLeft="12dp"
            android:text="@string/card_num" />

        <EditText
            android:id="@+id/note_id"
            style="@style/text_black_14_m_"
            android:background="@null"
            android:hint="@string/common_hint"/>
    </LinearLayout>
    <View style="@style/line_vertical" />
    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_login_pressed"
        android:text="@string/btn_search"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18" />
    </LinearLayout>
    <ListView
        android:id="@+id/search_list"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        />
</LinearLayout>

