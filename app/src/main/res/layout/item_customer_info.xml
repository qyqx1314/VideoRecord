<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              >

    <LinearLayout

        style="@style/apply_ll"
        >
        <!--edit不自动获取焦点-->
        <TextView
            android:id="@+id/txt_star"
            style="@style/my_left_txt"
            android:text="@string/star"
            android:textColor="@color/textColor_red" />

        <TextView
            android:id="@+id/txt_left"
            style="@style/my_left_txt1"
            android:text="@string/user_name" />

        <EditText
            android:visibility="gone"
            android:id="@+id/txt_right1"
            style="@style/text_black_14_m_"
            android:layout_height="match_parent"
            android:background="@null"
            android:maxLength="40" />
        <LinearLayout
            android:id="@+id/layout_choose"
            style="@style/common_ll_0_m_h">
            <TextView
                android:layout_weight="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/txt_right2"
                style="@style/text_black_14_m_"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:maxLength="40" />
            <ImageView
                android:layout_marginEnd="12dp"
                android:visibility="gone"
                android:id="@+id/img_down"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_down"/>
        </LinearLayout>

    </LinearLayout>
    <View
       style="@style/line_vertical"/>


</LinearLayout>