<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg"
    >
    <include layout="@layout/activity_head"/>

    <RelativeLayout
        android:id="@+id/layout_pro"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/common_item_pressed">

        <!--存储位置-->
        <TextView
            style="@style/my_left_txt1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/star2"
            android:text="@string/save_location" />

        <ImageView
            android:id="@+id/down"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/icon_down" />

        <TextView
            android:id="@+id/note_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/down"
            android:textColor="@color/record_typeface"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>
    <View style="@style/line_vertical" />
    <!--已用-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/common_item_pressed">

        <TextView
            style="@style/my_left_txt1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="@string/have_used" />


        <TextView
            android:id="@+id/have_used"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="12dp"
            android:textColor="@color/record_typeface"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>
    <View style="@style/line_vertical" />
    <!--剩余-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/common_item_pressed">

        <TextView
            style="@style/my_left_txt1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="@string/have_lost" />

        <TextView
            android:id="@+id/have_lost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_alignParentEnd="true"
            android:textColor="@color/record_typeface"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>
    <View style="@style/line_vertical" />

</LinearLayout>
