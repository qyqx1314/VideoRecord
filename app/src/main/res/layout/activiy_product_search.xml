<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/background"
        >
        <ImageView
            android:id="@+id/img_go_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:contentDescription="@string/img_back"
            android:paddingEnd="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingStart="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_go_back" />
        <TextView
            android:id="@+id/txt_search"
            style="@style/txt_choose"
            android:textColor="@color/record_typeface"
            android:layout_alignParentRight="true"
            android:text="@string/product_search" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/img_go_back"
            android:layout_toStartOf="@+id/txt_search"
            >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/img_search"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/search"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                />
            
            <EditText
                android:id="@+id/input_product"
                android:layout_width="170dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/img_search"
                android:layout_marginStart="12dp"
                android:background="@null"
                android:hint="@string/search_hint"
                android:textSize="@dimen/text_size_11"
                android:textColor="@color/record_typeface"
                />
            <RelativeLayout
                android:id="@+id/search_clear"
                android:visibility="gone"
                android:layout_width="38dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                >
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/icon_clear_search"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"
                />
            </RelativeLayout>
        </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <com.microcredit.adapter.myview.RefreshLayout
        android:id="@+id/layout_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/product_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            />
    </com.microcredit.adapter.myview.RefreshLayout>
</LinearLayout>
